{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es6",
      "es2020",
      "dom"
    ],
    "allowJs": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@gallant/*": ["./src/*"]
    },
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "tsconfig.json"
  ]
}
